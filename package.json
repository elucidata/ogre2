{
  "name": "ogre2",
  "version": "0.2.0",
  "description": "Object Graph engine",
  "main": "index.js",
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true,
          "everything": true
        }
      ],
      [
        "envify",
        {
          "NODE_ENV": "production"
        }
      ]
    ]
  },
  "scripts": {
    "all": "npm run build && npm run dist && npm run minify && npm run example",
    "build": "jsx --no-cache-dir --harmony src lib",
    "dist": "NODE_ENV=production browserify src/ogre.js -o dist/ogre.js --standalone Ogre",
    "example": "NODE_ENV=development browserify example/src/visualize-changes.jsx -o example/js/visualize-changes-bundle.js",
    "watch": "watchify src/ogre.js -o dist/ogre.js --standalone Ogre --debug --verbose",
    "watch-example": "watchify example/src/visualize-changes.jsx -o example/js/visualize-changes-bundle.js",
    "minify": "cat dist/ogre.js | uglifyjs -m -c > dist/ogre.min.js",
    "test": "tape test/*.js | tap-spec",
    "test-browser": "browserify -t reactify test/*.js | testlingify"
  },
  "author": "Matt McCray <matt@elucidata.net>",
  "license": "MIT",
  "dependencies": {
    "react": "^0.12.0",
    "elucidata-type": "^1.1.1"
  },
  "devDependencies": {
    "tape": "^3.0.2",
    "react-tools": "^0.12.0",
    "browserify": "^6.2.0",
    "reactify": "^0.15.2",
    "watchify": "^2.1.1",
    "uglifyjs": "^2.3.6",
    "tap-spec": "^1.0.1",
    "random-color": "0.0.1",
    "envify": "^3.0.0",
    "stripify": "^1.2.0"
  }
}
